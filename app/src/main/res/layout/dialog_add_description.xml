<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:id="@+id/tv_add_description_dialog"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="24dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:fontFamily="@font/dosis"
			android:gravity="center"
			android:text="Add your description:"
			android:textColor="@android:color/black"
			android:textSize="@dimen/font_size_normal"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		
		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/et_add_description_dialog"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:fontFamily="@font/dosis"
			android:hint="Description"
			android:lines="2"
			android:inputType="textMultiLine"
			android:gravity="bottom"
			android:textSize="@dimen/font_size_large"
			app:backgroundTint="@color/colorAccent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_add_description_dialog" />
		
		<Button
			android:id="@+id/btn_add_description_dialog"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="48dp"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="24dp"
			android:background="@color/colorPrimary"
			android:fontFamily="@font/dosis"
			android:text="Add"
			android:textColor="@android:color/white"
			android:textSize="@dimen/font_size_normal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/et_add_description_dialog" />
	
	</android.support.constraint.ConstraintLayout>
	
</RelativeLayout>

